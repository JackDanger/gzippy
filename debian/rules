#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export CARGO_HOME = $(CURDIR)/debian/cargo

%:
	dh $@

override_dh_auto_build:
	cargo build --release

override_dh_auto_install:
	# Install gzippy binary
	install -D -m 755 target/release/gzippy debian/gzippy/usr/bin/gzippy
	# Create ungzippy symlink
	ln -sf gzippy debian/gzippy/usr/bin/ungzippy
	
	# For gzippy-replace-gzip: create symlinks in /usr/lib/gzippy
	mkdir -p debian/gzippy-replace-gzip/usr/lib/gzippy
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/lib/gzippy/gzip
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/lib/gzippy/gunzip
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/lib/gzippy/gzcat
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/lib/gzippy/zcat
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/lib/gzippy/uncompress
	
	# Create the actual /usr/bin replacements
	mkdir -p debian/gzippy-replace-gzip/usr/bin
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/bin/gzip
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/bin/gunzip
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/bin/gzcat
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/bin/zcat
	ln -sf /usr/bin/gzippy debian/gzippy-replace-gzip/usr/bin/uncompress

override_dh_auto_test:
	# Skip tests during package build (they require special permissions)
	@echo "Skipping tests during package build"

override_dh_auto_clean:
	cargo clean || true
	rm -rf $(CARGO_HOME)
